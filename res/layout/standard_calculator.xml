<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >

    <Button
        android:id="@+id/Btnplus_id"
        android:layout_width="90dp"
        android:layout_height="56dp"
        android:layout_above="@+id/Btnequal_id"
        android:layout_alignLeft="@+id/Btnequal_id"
        android:layout_alignParentRight="true"
        android:onClick="btnplusClicked"
        android:textSize="40sp"
        android:text="+" />

    <Button
        android:id="@+id/Btnminus_id"
        android:layout_width="90dp"
        android:layout_height="56dp"
        android:layout_above="@+id/Btnplus_id"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/Btn3_id"
        android:onClick="btnminusClicked"
        android:textSize="40sp"
        android:text="-" />

    <Button
        android:id="@+id/Btnmult_id"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_above="@+id/Btnminus_id"
        android:layout_alignLeft="@+id/Btnminus_id"
        android:layout_alignParentRight="true"
        android:onClick="btnmultClicked"
        android:textSize="40sp"
        android:text="*" />

    <Button
        android:id="@+id/Btn9_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/Btn8_id"
        android:layout_alignBottom="@+id/Btn8_id"
        android:layout_toRightOf="@+id/Btn8_id"
        android:onClick="btn9Clicked"
        android:textSize="40sp"
        android:text="9" />

    <Button
        android:id="@+id/Btnequal_id"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/Btn0_id"
        android:layout_toRightOf="@+id/Btn3_id"
        android:onClick="btnequalClicked"
        android:textSize="40sp"
        android:text="=" />

    <Button
        android:id="@+id/Btnsqrt_id"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Btn8_id"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/Btnper_id"
        android:onClick="btnsqrtClicked"
        android:textSize="25sp"
        android:text="Sqrt" />

    <Button
        android:id="@+id/Btnclear_id"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Btn9_id"
        android:layout_alignLeft="@+id/Btndivide_id"
        android:layout_alignRight="@+id/Btndivide_id"
        android:onClick="btnclearClicked"
        android:textSize="25sp"
        android:text="Clear" />

    <Button
        android:id="@+id/Btndivide_id"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Btn9_id"
        android:layout_toRightOf="@+id/Btn9_id"
        android:onClick="btndivideClicked"
        android:textSize="30sp"
        android:text="/" />

    <Button
        android:id="@+id/Btnper_id"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Btn8_id"
        android:onClick="btnperClicked"
        android:textSize="30sp"
        android:text="%" />

    <Button
        android:id="@+id/Btn0_id"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="btn0Clicked"
        android:textSize="40sp"
        android:text="0" />

    <Button
        android:id="@+id/BtnDecimal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/Btn0_id"
        android:layout_alignBottom="@+id/Btn0_id"
        android:layout_toRightOf="@+id/Btn0_id"
        android:textSize="40sp"
        android:text="." />

    <Button
        android:id="@+id/Btn3_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/BtnDecimal"
        android:layout_alignLeft="@+id/BtnDecimal"
        android:onClick="btn3Clicked"
        android:textSize="40sp"
        android:text="3" />

    <Button
        android:id="@+id/Btn2_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/Btn0_id"
        android:layout_toLeftOf="@+id/BtnDecimal"
        android:onClick="btn2Clicked"
        android:textSize="40sp"
        android:text="2" />

    <Button
        android:id="@+id/Btn5_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/Btn3_id"
        android:layout_toLeftOf="@+id/Btn3_id"
        android:onClick="btn5Clicked"
        android:textSize="40sp"
        android:text="5" />

    <Button
        android:id="@+id/Btn6_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/Btn5_id"
        android:layout_alignBottom="@+id/Btn5_id"
        android:layout_toLeftOf="@+id/Btnminus_id"
        android:onClick="btn6Clicked"
        android:textSize="40sp"
        android:text="6" />

    <Button
        android:id="@+id/Btn4_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/Btn5_id"
        android:layout_alignBottom="@+id/Btn5_id"
        android:layout_toLeftOf="@+id/Btn5_id"
        android:onClick="btn4Clicked"
        android:textSize="40sp"
        android:text="4" />

    <Button
        android:id="@+id/Btn7_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/Btn5_id"
        android:layout_toLeftOf="@+id/Btn8_id"
        android:onClick="btn7Clicked"
        android:textSize="40sp"
        android:text="7" />

    <Button
        android:id="@+id/Btn8_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/Btn5_id"
        android:layout_alignLeft="@+id/Btn5_id"
        android:onClick="btn8Clicked"
        android:text="8"
        android:textSize="40sp" />

    <Button
        android:id="@+id/Btn1_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/Btn0_id"
        android:layout_alignParentLeft="true"
        android:onClick="btn1Clicked"
        android:text="1"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/result_id"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/Btnsqrt_id"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Standard Calculator"
        android:textSize="25sp" />
    
</RelativeLayout>
