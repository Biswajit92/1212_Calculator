<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextureView
        android:id="@+id/texure"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:shadowColor="#F7868F"
        android:text="TEMPERATURE"
         />
       <RelativeLayout
        android:id="@+id/rlthird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlsecond" >
        <TextureView 
            android:id="@+id/texur4"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlforth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlthird" >

        <Button
            android:id="@+id/bt9"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:text="9"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/bt9"
            android:text="8"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt7"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/bt8"
            android:text="7"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btback"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/bt7"
            android:text="BACK"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btclr"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/btback"
            android:text="CLR"
            android:textSize="15sp" />

        <TextureView
            android:id="@+id/texure2"
            android:layout_width="match_parent"
            android:layout_below="@+id/bt9"
            android:layout_height="20sp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure2"
            android:text="6"
            android:textSize="15sp" />
        <Button
            android:id="@+id/bt5"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/bt6"
            android:layout_below="@+id/texure2"
            android:text="5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure2"
            android:layout_toRightOf="@+id/bt5"
            android:text="4"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bttoggle"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure2"
            android:layout_toRightOf="@+id/bt4"
            android:text="+/-"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btequal"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure2"
            android:layout_toRightOf="@+id/bttoggle"
            android:text="="
            android:textSize="15sp" />

        <TextureView
            android:id="@+id/texure3"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_below="@+id/bt6" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure3"
            android:text="3"
            android:textSize="15sp"
             />

        <Button
            android:id="@+id/bt2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure3"
            android:layout_toRightOf="@+id/bt3"
            android:text="2"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure3"
            android:layout_toRightOf="@+id/bt2"
            android:text="1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt0"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure3"
            android:layout_toRightOf="@+id/bt1"
            android:text="0"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btptn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/texure3"
            android:layout_toRightOf="@+id/bt0"
            android:text="."
            android:textSize="15sp" />

        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlfirst" >

        <TextView
            android:id="@+id/textto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
             />

        <TextView
            android:id="@+id/textchooseto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="choose unit"
            />

        <EditText
            android:id="@+id/textoutput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textto"
            android:hint="show output here"
            android:textSize="15dp" />
        <!-- android:textDirection="locale" -->

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textchooseto"
            android:layout_toRightOf="@+id/textoutput"
            android:entries="@array/temp_arrays"
            android:prompt="@string/temp_prompt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlfirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1" >

        <TextView
            android:id="@+id/textfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textchoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="choose unit"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/textinput"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="input here"
            android:textSize="25dp" >
        <!-- android:textDirection="locale" -->

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/textinput"
            android:entries="@array/temp_arrays"
            android:prompt="@string/temp_prompt" />
    </RelativeLayout>

</RelativeLayout>