<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddActivity"
    android:id="@+id/rly">
    <EditText
        android:id="@+id/etinput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#777777"
        android:hint="enter input"
         />
    <TextView 
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="#777777"
        android:layout_below="@+id/etinput"
        />
    <EditText
        android:id="@+id/etoutput"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv1" 
        android:textColor="#777777" 
        android:hint="result"  
         />
<TextureView
            android:id="@+id/Tx1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/etoutput"/>
            
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rly2"
    android:layout_below="@+id/Tx1">
    <Button 
                android:id="@+id/bt9"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_alignParentLeft="true"
                android:text="9"
                />
            <Button 
                android:id="@+id/bt8"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_toRightOf="@+id/bt9"
                android:text="8"
                />
            <Button 
                android:id="@+id/bt7"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_toRightOf="@+id/bt8"
                android:text="7"
                />
            <Button 
                android:id="@+id/bt6"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_toRightOf="@+id/bt7"
                android:text="6"
                />
            <Button 
                android:id="@+id/btpls"
                android:layout_width="47sp"
                android:layout_height="40sp"
                android:layout_toRightOf="@+id/bt6"
                android:text="+"
                />
            <TextureView 
                android:id="@+id/Tx2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/bt6"
                />
            <Button 
                android:id="@+id/bt5"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_below="@+id/Tx2"
                android:text="5"
                />
            <Button 
                android:id="@+id/bt4"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_below="@+id/Tx2"
                android:layout_toRightOf="@+id/bt5"
                android:text="4"
                />
            <Button 
                android:id="@+id/bt3"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_below="@+id/Tx2"
                android:layout_toRightOf="@+id/bt4"
                android:text="3"
                />
            <Button 
                android:id="@+id/bt2"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_below="@+id/Tx2"
                android:layout_toRightOf="@+id/bt3"
                android:text="2"
                />
            <TextureView 
                android:id="@+id/Tx3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/bt2"
                />
            <Button 
                android:id="@+id/bt1"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_below="@+id/Tx3"
                android:layout_alignParentLeft="true"
                android:text="1"
                />
            <Button 
                android:id="@+id/bt0"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_below="@+id/Tx3"
                android:layout_toRightOf="@+id/bt1"
                android:text="0"
                />
            <Button 
                android:id="@+id/btok"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_below="@+id/Tx3"
                android:layout_toRightOf="@+id/bt0"
                android:text="="
                />
            <Button 
                android:id="@+id/btclear"
                android:layout_width="60sp"
                android:layout_height="40sp"
                android:layout_below="@+id/Tx3"
                android:layout_toRightOf="@+id/btok"
                android:text="CLR"
                />
            
</RelativeLayout>
</RelativeLayout>
